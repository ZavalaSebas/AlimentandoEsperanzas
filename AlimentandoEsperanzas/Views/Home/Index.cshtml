@using System.Globalization
@model IEnumerable<AlimentandoEsperanzas.Models.Donation>
@{
    ViewData["Title"] = "Home Page";
}

<div class="lime-container">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="display-4 text-center">¡Bienvenido!</h1>
                    <p class="lead text-center">Aquí encontrarás todas las herramientas necesarias para administrar y coordinar las donaciones de manera eficiente. Juntos, podemos hacer posible un impacto real en las vidas de quienes más lo necesitan.</p>
                    <div class="text-center">
                        <a asp-controller="Donations" asp-action="Index" class="btn btn-primary">Donaciones</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Donaciones</h2>
                    <div class="row">
                        <div class="col-md-24">
                            <canvas id="donationChart" width="800" height="400"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title text-center">Total @ViewBag.CurrentMonth</h2>
                    <h1 class="text-center">₡@ViewBag.donationDataLastMonth</h1>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title text-center">Donaciones Registradas</h2>
                    <h1 class="text-center">@ViewBag.TotalDonations</h1>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title text-center">Donadores Registrados</h2>
                    <h1 class="text-center">@ViewBag.TotalDonors</h1>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Información de Contacto</h2>
                    <p>San josé, Santa Ana. Barrio La promesa, continuo a la represa CNFL</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-envelope"></i> Correo electrónico: info@alimentandoesperanza.org</li>
                        <li><i class="fas fa-phone"></i> Teléfono: +506 2282-2053 - +506 8412-0126</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Obtener los datos de donaciones desde ViewBag
    var donationData = {
        labels: @Html.Raw(Json.Serialize(ViewBag.Labels)),
        datasets: [{
            label: 'Monto de Donaciones',
            data: @Html.Raw(Json.Serialize(ViewBag.Amounts)),
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    };

    // Configurar opciones del gráfico
    var chartOptions = {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            y: {
                beginAtZero: true
            }
        }
    };

    // Obtener el contexto del lienzo del gráfico
    var ctx = document.getElementById('donationChart').getContext('2d');

    // Crear el gráfico
    var myChart = new Chart(ctx, {
        type: 'bar', // Tipo de gráfico (puedes cambiarlo a 'line', 'pie', etc.)
        data: donationData,
        options: chartOptions
    });
</script>



