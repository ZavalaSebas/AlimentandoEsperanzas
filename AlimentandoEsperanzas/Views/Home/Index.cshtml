@using System.Globalization
@model IEnumerable<AlimentandoEsperanzas.Models.Donation>
@{
    ViewData["Title"] = "Home Page";
}

<div class="lime-container">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="display-4 text-center">¡Bienvenido!</h1>
                    <p class="lead text-center">Aquí puedes encontrar información sobre nuestro proyecto y cómo puedes contribuir para ayudar a quienes más lo necesitan.</p>
                    <div class="text-center">
                        <a href="#" class="btn btn-primary">Más información</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Donaciones</h2>
                    <div class="row">
                        <div class="col-md-24">
                            <canvas id="donationChart" width="800" height="400"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">¿Cómo puedes ayudar?</h2>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-hand-holding-heart"></i> Dona para apoyar nuestras causas.</li>
                        <li><i class="fas fa-hands-helping"></i> Únete como voluntario en nuestros proyectos.</li>
                        <li><i class="fas fa-share-square"></i> Comparte nuestra causa en tus redes sociales.</li>
                    </ul>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Contacto</h2>
                    <p>Puedes contactarnos para obtener más información sobre nuestro trabajo y cómo puedes involucrarte.</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-envelope"></i> Correo electrónico: info@tuprojecto.com</li>
                        <li><i class="fas fa-phone"></i> Teléfono: +123456789</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Obtener los datos de donaciones desde ViewBag
    var donationData = {
        labels: @Html.Raw(Json.Serialize(ViewBag.Labels)),
        datasets: [{
            label: 'Monto de Donaciones',
            data: @Html.Raw(Json.Serialize(ViewBag.Amounts)),
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
        }]
    };

    // Configurar opciones del gráfico
    var chartOptions = {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            y: {
                beginAtZero: true
            }
        }
    };

    // Obtener el contexto del lienzo del gráfico
    var ctx = document.getElementById('donationChart').getContext('2d');

    // Crear el gráfico
    var myChart = new Chart(ctx, {
        type: 'bar', // Tipo de gráfico (puedes cambiarlo a 'line', 'pie', etc.)
        data: donationData,
        options: chartOptions
    });
</script>



