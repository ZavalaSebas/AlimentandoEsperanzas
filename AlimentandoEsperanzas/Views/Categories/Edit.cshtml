@model AlimentandoEsperanzas.Models.Category

@{
    ViewData["Title"] = "Editar";
}

<div class="lime-container">
    <h1 class="text-center mb-4">Editar Categoría</h1>
    <div class="card">
        <div class="card-body">
            <h4>Categoría</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="form-group">
                            <label asp-for="Category1" class="control-label">Producto</label>
                            <input asp-for="Category1" class="form-control" />
                            <span asp-validation-for="Category1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
