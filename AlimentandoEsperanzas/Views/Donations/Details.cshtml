@model AlimentandoEsperanzas.Models.Donation

@{
    ViewData["Title"] = "Detalle";
}

<div class="lime-container">
    <h1 class="text-center mb-4">Detalle de la Donación</h1>
    <div class="card">
        <div class="card-body">
            <div>
                <h4>Donación</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Comments)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Comments)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.Category1)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DonationType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DonationType.DonationType1)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donor)
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Donor.Name @Model.Donor.LastName - @Model.Donor.IdNumber
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PaymentMethod)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PaymentMethod.PaymentMethod1)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="DonationId" />
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
