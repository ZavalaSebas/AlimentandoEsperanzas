@model IEnumerable<AlimentandoEsperanzas.Models.Donation>

@{
    ViewData["Title"] = "Donaciones";
}
@if (TempData["Mensaje"] != null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["Mensaje"]');
    </script>
}

<div class="lime-header">
    <h1><a class="navbar-brand">Donaciones</a></h1>
    <div class="text-right">
        <a href="@Url.Action("Create")" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Agregar nuevo</a>
        <a asp-controller="DonationTypes" asp-action="Index" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Tipo de Donación</a>
    </div>
</div>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Admin Dashboard Template">
    <meta name="keywords" content="admin,dashboard">
    <meta name="author" content="stacks">
    <!-- The above 6 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>Lime - Responsive Admin Dashboard Template</title>

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--<link href="../../assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">-->
    <link href="../../../../lime/theme/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../../../lime/theme/assets/plugins/font-awesome/css/all.min.css" rel="stylesheet">
    <link href="../../../../lime/theme/assets/plugins/toastr/toastr.min.css" rel="stylesheet">

    <!-- Theme Styles -->
    <link href="../../../../lime/theme/assets/css/lime.min.css" rel="stylesheet">
    <link href="../../../../lime/theme/assets/css/custom.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <style>
        .dataTables_filter input {
            height: 40px;
            font-size: 16px;
            padding: 6px 12px;
            width: 400px; /* ajusta el ancho según tus necesidades */
        }

        .custom-toolbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 15px;
        }
    </style>
</head>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="donationTable" class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Monto</th>
                                <th>Fecha</th>
                                <th>Comentarios</th>
                                <th>Categoría</th>
                                <th>Tipo de Donación</th>
                                <th>Donante</th>
                                <th>Método de Pago</th>
                                <th class="text-right">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Comments)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Category.CategoryId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DonationType.DonationTypeId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Donor.DonorId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PaymentMethod.PaymentMethodId)</td>
                                    <td class="text-right">
                                        <a asp-action="Edit" asp-route-id="@item.DonationId" class="btn btn-warning" style="color:black;"><i class="fas fa-edit"></i> Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.DonationId" class="btn btn-info" style="color:black;"><i class="fas fa-eye"></i> Detalles</a>
                                        <a href="#" class="btn btn-danger delete-button" data-toggle="modal" data-target="#deleteModal" data-donation-id="@item.DonationId"><i class="fas fa-trash-alt"></i> Eliminar</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que quieres eliminar esta donación?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" action="#" method="post">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"></script>
    <script>
        $(document).ready(function () {
            $('#donationTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.delete-button').on('click', function (e) {
                e.preventDefault();
                var deleteUrl = $(this).attr('href');
                $('#deleteForm').attr('action', deleteUrl);
                $('#deleteModal').modal('show');
            });
        });
    </script>

}


