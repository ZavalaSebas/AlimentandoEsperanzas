@model AlimentandoEsperanzas.Models.Donation

@{
    ViewData["Title"] = "Create";
}

<div class="lime-container">
    <h1 class="text-center mb-4">Agregar Nueva Donación</h1>
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col">

                        <div class="form-group">
                            <label asp-for="DonorId" class="control-label">Donante</label>
                            <select asp-for="DonorId" id="DonorId" class="form-control" asp-items="ViewBag.DonorId"></select>
                            <span asp-validation-for="DonorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label">Monto</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: white;">₡</span>
                                <input asp-for="Amount" class="form-control" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DonationTypeId" class="control-label">Tipo de Donación</label>
                            <select asp-for="DonationTypeId" class="form-control" asp-items="ViewBag.DonationTypeId"></select>
                            <span asp-validation-for="DonationTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Date" class="control-label">Fecha</label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                            </div>
                            <div class="col">

                        <div class="form-group">
                            <label asp-for="PaymentMethodId" class="control-label">Método de Pago</label>
                            <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodId"></select>
                            <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label">Categoría</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Comments" class="control-label">Comentarios</label>
                            <textarea asp-for="Comments" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Comments" class="text-danger"></span>
                        </div>
                            </div>
                            <div class="form-group text-center">
                                <br />
                                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                                <button type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
