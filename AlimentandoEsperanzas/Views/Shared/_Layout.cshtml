@{
    var userRole = Context.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlimentandoEsperanzas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlimentandoEsperanzas.styles.css" asp-append-version="true" />

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--<link href="../../assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">-->
    <link href="../../../../lime/theme/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../../../lime/theme/assets/plugins/font-awesome/css/all.min.css" rel="stylesheet">
    <link href="../../../../lime/theme/assets/plugins/toastr/toastr.min.css" rel="stylesheet">
    <!-- Theme Styles -->
    <link href="../../../../lime/theme/assets/css/lime.min.css" rel="stylesheet">
    <link href="../../../../lime/theme/assets/css/custom.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" asp-append-version="true" />

</head>
<body>

    @* Sidebar *@
    <div class="lime-sidebar">
        <div class="lime-sidebar-inner slimscroll">
            <ul class="accordion-menu">
                <li class="sidebar-title">
                    Menú
                </li>
                <li>
                    <a asp-controller="Donations" asp-action="Index"><i class="material-icons">attach_money</i>Donación</a>
                </li>
                <li>
                    <a asp-controller="Donors" asp-action="Index"><i class="material-icons">group</i>Donantes</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Privacy"><i class="material-icons">person</i>Perfil</a>
                </li>
                <li>
                    <a asp-controller="Items" asp-action="Index"><i class="material-icons">inventory</i>Inventario</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Privacy"><i class="material-icons">bar_chart</i>Reportes</a>
                </li>
                <li>
                    <a href="#"><i class="material-icons">build</i>Mantenimiento<i class="material-icons has-sub-menu">keyboard_arrow_left</i></a>
                    <ul class="sub-menu">
                        <li>
                            <a asp-controller="Categories" asp-action="Index">Categoria de Donación</a>
                        </li>
                        <li>
                            <a asp-controller="DonationTypes" asp-action="Index">Tipo de Donación</a>
                        </li>
                        <li>
                            <a asp-controller="Paymentmethods" asp-action="Index">Método de Pago</a>
                        </li>
                        <li>
                            <a asp-controller="Idtypes" asp-action="Index">Tipo de Identificación</a>
                        </li>
                        <li>
                            <a asp-controller="Itemcategories" asp-action="Index">Categoria de Producto</a>
                        </li>
                    </ul>
                </li>
                @if (userRole == "Admin")
                {
                    <li>
                        <a asp-controller="Users" asp-action="Index"><i class="material-icons">add</i>Agregar Usuarios</a>
                    </li>
                    <li>
                        <a asp-controller="Actionlog" asp-action="Index"><i class="material-icons">list_alt</i>Historial de Acciones</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    @* Themes *@
    <div class="theme-settings-sidebar">
        <div class="theme-settings-inner">
            <h3 class="theme-sidebar-title">Tema</h3>
            <p class="themes-info">Seleccione un tema</p>

            <a class="theme-item active" href="#">
                <img src="../../assets/images/themes/1.png" alt="">
                <h4 class="theme-title">Clásico</h4>
            </a>
            <a class="theme-item" href="../admin2/index.html">

                <img src="../../assets/images/themes/2.png" alt="">
                <h4 class="theme-title">Modo oscuro</h4>
            </a>
        </div>
    </div>

    @*  Header *@
    <div class="lime-header">
        <nav class="navbar navbar-expand-lg">

            @* Navbar-expand *@
            <section class="material-design-hamburger navigation-toggle">
                <a href="javascript:void(0)" class="button-collapse material-design-hamburger__icon">
                    <span class="material-design-hamburger__layer"></span>
                </a>
            </section>

            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Alimentando Esperanzas</a>

            @* Settings *@
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle theme-settings-link" href="#">
                        <i class="material-icons">layers</i>
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a class="dropdown-item" href="#">Cuenta</a></li>
                        <li><a class="dropdown-item" href="#">Configuración</a></li>
                        <li class="divider"></li>
                        <li><a class="dropdown-item" href="/Login/Index">Cerrar sesión</a></li>
                    </ul>
                </li>

            </ul>
        </nav>
    </div>

    @* Page slide*@
    <div class="lime-container">
        <div class="lime-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="page-title">
                            <nav aria-label="breadcrumb">

                            </nav>

                        </div>
                    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

                    @* <footer class="border-top footer text-muted">
                        <div class="container">
                            &copy; 2024 - AlimentandoEsperanzas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                    </footer> *@

                </div>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Javascripts -->
    <script src="./lime/theme/assets/plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="./lime/theme/assets/plugins/bootstrap/popper.min.js"></script>
    <script src="./lime/theme/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="./lime/theme/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="./lime/theme/assets/plugins/chartjs/chart.min.js"></script>
    <script src="./lime/theme/assets/plugins/apexcharts/dist/apexcharts.min.js"></script>
    <script src="./lime/theme/assets/plugins/toastr/toastr.min.js"></script>
    <script src="./lime/theme/assets/js/lime.min.js"></script>
    <script src="./lime/theme/assets/js/pages/dashboard.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>

    .content {
        padding-bottom: 60px; 
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px; 
        background-color: #f5f5f5;
        text-align: center;
        line-height: 60px; 
    }
    .wrapper {
        position: relative;
        min-height: 100vh;
    }
</style>