<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DonationType1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonationType1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DonationTypeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DonationTypeId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.DonationTypeId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>
<p>
    <button type="button" class="btn btn-outline-primary"><a asp-action="Create">Agregar nuevo</a></button>
</p>