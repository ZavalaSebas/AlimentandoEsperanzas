<body class="login-page err-500">
    <div class='loader'>
        <div class='spinner-grow text-primary' role='status'>
            <span class='sr-only'>Loading...</span>
        </div>
    </div>
    <div class="container">
        <div class="login-container">
            <div class="row">
                <div class="col-lg-4 col-md-5 col-sm-9 lfh">
                    <div class="card login-box">
                        <div class="card-body">

                            <h5 class="card-title text-center">Inicio de Sesión</h5>

                            <form id="loginForm" method="post">
                                <div class="form-group">
                                    <label for="email">Correo:</label>
                                    <input type="email" class="form-control" name="email" id="email">
                                    <div id="emailError" style="display:none; color:red;">Por favor, ingrese su correo electrónico.</div>
                                </div>
                                <div class="form-group">
                                    <label for="password">Contraseña:</label>
                                    <input type="password" class="form-control" name="password" id="password">
                                    <div id="passwordError" style="display:none; color:red;">Por favor, ingrese su contraseña.</div>
                                    <div id="loginError" style="display:none; color:red;">Credenciales incorrectas. Por favor, inténtelo de nuevo.</div>
                                </div>
                                <div class="form-group text-center">
                                    <button type="button" id="loginButton" class="btn btn-primary">Iniciar Sesión</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>



    <!-- Javascripts -->
    <script src="../../../../lime/theme/assets/plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="../../../../lime/theme/assets/plugins/bootstrap/popper.min.js"></script>
    <script src="../../../../lime/theme/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="../../../../lime/theme/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="../../../../lime/theme/assets/js/lime.min.js"></script>

<script>
    $(document).ready(function () {
        $('#loginButton').click(function () {
            if (validateForm()) {
                var email = $('#email').val();
                var password = $('#password').val();

                $.ajax({
                    url: '@Url.Action("Index", "Login")',
                    type: 'POST',
                    data: {
                        email: email,
                        password: password
                    },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            $('#loginError').show();
                        }
                    },
                    error: function () {
                        $('#loginError').show();
                    }
                });
            }
        });
    });

    function validateForm() {
        var email = $('#email').val();
        var password = $('#password').val();

        if (email.trim() === "") {
            $('#emailError').show();
            return false;
        } else {
            $('#emailError').hide();
        }

        if (password.trim() === "") {
            $('#passwordError').show();
            return false;
        } else {
            $('#passwordError').hide();
        }

        return true;
    }
</script>
