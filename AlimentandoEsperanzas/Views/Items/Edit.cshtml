@model AlimentandoEsperanzas.Models.Item

@{
    ViewData["Title"] = "Editar Producto";
}
<div class="lime-container">
    <h1 class="text-center mb-4">Editar Producto</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Aquí ajustamos el tamaño de la columna -->
            <div class="card">
                <div class="card-body">
                    <h4>Inventario</h4>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Producto</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label">Cantidad</label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category" class="control-label">Categoría</label>
                            <select asp-for="Category" class="form-control" asp-items="ViewBag.Category"></select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
